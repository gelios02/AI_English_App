MDScreen:
    name: "profile"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
            on_press: root.manager.current = 'start_use'
        MDLabel:
            id: profile_name
            text: "Hello Name"
            font_name: "BPoppins"
#            font_style: "Display"
#            role: "small"
            font_size: "30sp"
            pos_hint: {"center_x": .5, "center_y": .65}
            halign: "center"
            color: rgba(0, 0, 59, 255)
        BoxLayout:
            FloatLayout:
                canvas:
                    Color:
                        rgb: 1, 1, 1
                    Ellipse:
                        pos: 95, 415
                        size: 130 , 130
                        source: "assets/photo_profile.jpg"
                        angle_start: 0
                        angle_end: 360

        Button:
            text: "My recommendation"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .44}
            background_color: 0, 0, 0, 0
            font_name: "BPoppins"
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "weakly_plan"

            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
        Button:
            text: "Take the test"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .34}
            background_color: 0, 0, 0, 0
            font_name: "BPoppins"
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "start_use"

            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
        MDTextButton:
            text: "Log out"
            font_name: "BPoppins"
            font_size: "11sp"
            pos_hint: {"center_x": .5, "center_y": .05}
            color: rgba(194, 32, 32, 255)
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "main"


